<nav class="paginationNavigation">
    <ul class="pager">
        {# << 1 | << 10 | << 100 | << 10000  #}
        {% if currentPage > 1000 %}
            <li>
                <a href="index.php?page={{ currentPage-1000 }}&{{ searchUrlParameters }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo; 1000</span>
                </a>
            </li>
        {% endif %}
        {% if currentPage > 100 %}
            <li>
                <a href="index.php?page={{ currentPage-100 }}&{{ searchUrlParameters }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo; 100</span>
                </a>
            </li>
        {% endif %}
        {% if currentPage > 10 %}
            <li>
                <a href="index.php?page={{ currentPage-10 }}&{{ searchUrlParameters }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo; 10</span>
                </a>
            </li>
        {% endif %}
        {% if currentPage > 1 %}
        <li>
            <a href="index.php?page={{ currentPage-1 }}&{{ searchUrlParameters }}" aria-label="Previous">
                <span aria-hidden="true">&laquo; 1</span>
            </a>
        </li>
        {% endif %}
    </ul>



    {# |1|...|3|4|5| #}
    <ul class="pagination">
        {# |1| #}
        {% if currentPage > paginationWindow+1 %}
            <li><a href="index.php?page=1&{{ searchUrlParameters }}">1</a></li>
        {% endif %}
        {# ... #}
        {% if currentPage > paginationWindow+2 %}
            <li><span>...</span></li>
        {% endif %}

        {# |3|4|5| #}
        {% if lastPageReached %}
            {% set lastPage = currentPage %}
        {% else %}
            {% set lastPage = currentPage+paginationWindow %}
        {% endif %}
        {% for i in range(currentPage-paginationWindow, lastPage) %}
            {% if i > 0 %}
                {% if i == currentPage %}
                        <li class="active"><a href="index.php?page={{ i }}">
                            {{ i }} <span class="sr-only">(current)</span>
                        </a></li>
                    {% else %}
                        <li><a href="index.php?page={{ i }}&{{ searchUrlParameters }}">{{ i }}</a></li>
                    {% endif %}
            {% endif %}
        {% endfor %}
    </ul>

    {# 1 >> | 10 >> | 100 >> | 1000 >> #}
    <ul class="pager">
        {% if lastPageReached %}
            <li><span>Last page has been reached</span></li>
        {% else %}
            <li>
                <a href="index.php?page={{ currentPage+1 }}&{{ searchUrlParameters }}" aria-label="Next">
                    <span aria-hidden="true">1 &raquo;</span>
                </a>
            </li>
            <li>
                <a href="index.php?page={{ currentPage+10 }}&{{ searchUrlParameters }}" aria-label="Next">
                    <span aria-hidden="true">10 &raquo;</span>
                </a>
            </li>
            <li>
                <a href="index.php?page={{ currentPage+100 }}&{{ searchUrlParameters }}" aria-label="Next">
                    <span aria-hidden="true">100 &raquo;</span>
                </a>
            </li>
            <li>
                <a href="index.php?page={{ currentPage+1000 }}&{{ searchUrlParameters }}" aria-label="Next">
                    <span aria-hidden="true">1000 &raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>